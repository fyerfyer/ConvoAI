# Application Configuration
NODE_ENV=development
PORT=5000

# Logging Configuration
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
FRONTEND_URL=http://localhost:4200

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_NAME=discord-platform

# Redis Configuration
REDIS_URL=redis://localhost:6379

# MinIO/S3 Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_PUBLIC_URL=http://localhost:9000

# LiveKit Configuration
LIVEKIT_HOST=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# Bot Memory - Summary LLM Configuration (Optional)
# Used for rolling summary generation (separate from user's API key)
# If not configured, fallback to simple truncation strategy
SUMMARY_LLM_BASE_URL=https://api.deepseek.com
SUMMARY_LLM_API_KEY=
SUMMARY_LLM_MODEL=deepseek-chat
